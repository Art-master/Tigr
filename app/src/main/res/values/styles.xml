<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardItemChatViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">1dp</item>
        <item name="contentPaddingTop">1dp</item>
        <item name="contentPaddingLeft">2dp</item>
        <item name="contentPaddingRight">2dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="CardViewMessageStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">1dp</item>
        <item name="contentPaddingTop">1dp</item>
        <item name="contentPaddingLeft">2dp</item>
        <item name="contentPaddingRight">2dp</item>
        <item name="cardBackgroundColor">@color/colorDarkGray</item>
    </style>

    <style name="CardItemAvatarStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">1dp</item>
        <item name="contentPaddingTop">1dp</item>
        <item name="contentPaddingLeft">1dp</item>
        <item name="contentPaddingRight">1dp</item>
        <item name="cardBackgroundColor">@color/colorDarkGray</item>
    </style>

    <style name="CardItemUnreadMsgStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">13dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPaddingBottom">2dp</item>
        <item name="contentPaddingTop">2dp</item>
        <item name="contentPaddingLeft">2dp</item>
        <item name="contentPaddingRight">2dp</item>
        <item name="cardBackgroundColor">@color/colorOrange</item>
    </style>
</resources>
